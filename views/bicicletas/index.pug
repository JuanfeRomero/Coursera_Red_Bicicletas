extends ../layout

block content
    a.btn.btn-success(href='/bicicletas/create') Nueva Bicicleta
    
    a.btn.btn-primary(href='/') Volver a Home


    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col')
                th(scope='col')
                th(scope='col')
        tbody
            each bici in bicis
                tr
                    td= bici._id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href=`bicicletas/${bici._id}/show`) Mostrar
                    td
                        a(href=`bicicletas/${bici._id}/update`) Editar
                    td
                        form.inline(method='post' action='bicicletas/' + bici._id + '/delete')
                            input(type="hidden" name='_id' value=bici._id)
                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'